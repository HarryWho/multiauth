<div class="row mt-5 pt-4">
  <div class="card">
    <div class="card-header bg-warning">
      <img src="<%=article.author.image%>" alt="Authors Image" class="rounded-circle" width="42px"> Written by:
      <%=article.author.displayName%> on
        <%- formatDate(article.createdAt, 'MMMM Do YYYY') %>
          <%if(article.author._id== user.id){%>
            <%- include('../partials/_edit_button.ejs', {article: article})%>
              <%}%>
    </div>
    <div class="card-title h3 text-info">
      <%=article.title%>
    </div>
    <div class="card-body">
      <%-article.body%>
    </div>
    <div class="card-footer bg-warning"></div>
  </div>
</div>