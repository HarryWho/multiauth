<div class="row mt-5 pt-2">
  <div class="col-sm-10">
    <%- include('../partials/_add_btn.ejs') %>
      <h1 class="text-info">Dashboard Page</h1>
      <h3 class="text-info">Artciles</h3>
      <% if(articles.length > 0){%>
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th scope="col">Title</th>
              <th scope="col">Status</th>
              <th scope="col">Created</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
            <% articles.forEach(article=>{%>
              <tr>
                <td>
                  <%=article.title%>
                </td>
                <td>
                  <%=article.status%>
                </td>
                <td>
                  <%- formatDate(article.createdAt, 'MMMM Do YYYY h:mm:ss a') %>
                </td>
                <td>
                  <a href="/article/edit/<%=article._id %>" class="btn btn-primary btn-sm" title="Edit"><i class="bi bi-pencil-square"></i></a>
                  <form action="/article/<%=article._id %>?_method=DELETE" method="post" class="d-inline"><button type="submit" class="btn btn-danger btn-sm" title="Delete"><i class="bi bi-trash"></i></button></form>
                </td>
              </tr>
              <%})%>
          </tbody>
        </table>
        <%}else{%>
          <p>You have no Articles</p>
          <%}%>
  </div>
</div>